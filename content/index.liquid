<main>
  <h1>Stuart's Longpost Emporium</h1>
  {%- for post in collections.all reversed -%}
  <article>
    <p><a href="{{ post.url }}">{{ post.data.title }}</a> <em>(Published {{ post.data.date | date: "%d-%b-%Y" }})</em></p>
    <p>{{ post.data.description }}</p>
  </article>
  {%- endfor -%}
</main>
